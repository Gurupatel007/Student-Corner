<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add User | Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>

<body class="bg-gradient-to-br from-zinc-900 to-zinc-800 text-zinc-200 font-sans">
    <div class="container min-w-full px-4 py-8">
        <a href="/admin/dashboard"
            class="inline-block bg-zinc-700 hover:bg-zinc-600 text-zinc-200 font-semibold py-2 px-4 rounded-md transition duration-300 ease-in-out transform hover:scale-105 mb-4">
            <i data-feather="arrow-left" class="inline-block mr-2"></i> Back to Dashboard
        </a>
        <div class="flex flex-col items-center">
            <h1 class="text-4xl font-bold mb-8 text-[#B0A4D1]">Add New User</h1>
            <form id="userForm" action="/admin/users/add" method="POST"
                class="w-full max-w-2xl bg-zinc-800 p-8 rounded-lg shadow-lg">
                <div class="mb-6">
                    <label for="name" class="block mb-2 text-lg">Name</label>
                    <input type="text" id="name" name="name" required
                        class="w-full px-4 py-2 bg-zinc-700 rounded-md focus:outline-none focus:ring-2 focus:ring-[#B0A4D1]">
                </div>
                <div class="mb-6">
                    <label for="phonenumber" class="block mb-2 text-lg">Phone Number</label>
                    <input type="tel" id="phonenumber" name="phonenumber" required
                        class="w-full px-4 py-2 bg-zinc-700 rounded-md focus:outline-none focus:ring-2 focus:ring-[#B0A4D1]">
                </div>
                <div class="mb-6">
                    <label for="email" class="block mb-2 text-lg">Email</label>
                    <input type="email" id="email" name="email" required
                        class="w-full px-4 py-2 bg-zinc-700 rounded-md focus:outline-none focus:ring-2 focus:ring-[#B0A4D1]">
                </div>
                <div class="mb-6">
                    <label for="dob" class="block mb-2 text-lg">Date of Birth</label>
                    <input type="date" id="dob" name="dob" required
                        class="w-full px-4 py-2 bg-zinc-700 rounded-md focus:outline-none focus:ring-2 focus:ring-[#B0A4D1]">
                </div>
                <div class="mb-6">
                    <label for="gender" class="block mb-2 text-lg">Gender</label>
                    <select id="gender" name="gender" required
                        class="w-full px-4 py-2 bg-zinc-700 rounded-md focus:outline-none focus:ring-2 focus:ring-[#B0A4D1]">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="mb-6">
                    <label for="password" class="block mb-2 text-lg">Password</label>
                    <input type="password" id="password" name="password" required
                        class="w-full px-4 py-2 bg-zinc-700 rounded-md focus:outline-none focus:ring-2 focus:ring-[#B0A4D1]">
                </div>
                <button type="submit"
                    class="w-full bg-[#B0A4D1] hover:bg-[#9B8EC6] text-zinc-900 font-semibold py-3 px-4 rounded-md transition duration-300 ease-in-out transform hover:scale-105">
                    <i data-feather="user-plus" class="inline-block mr-2"></i> Add User
                </button>
            </form>
        </div>
    </div>
    <script>
        feather.replace();

        document.getElementById('userForm').addEventListener('submit', function (e) {
            e.preventDefault();
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            fetch('/admin/users/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            }).then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            }).then(data => {
                Swal.fire('Success', 'User added successfully', 'success').then(() => {
                    window.location.href = '/admin/dashboard';
                });
            }).catch(error => {
                console.error('Error:', error);
                Swal.fire('Error', 'Failed to add user', 'error');
            });
        });
    </script>
</body>

</html>